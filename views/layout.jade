block vars
	//- PATH
	- var host 	= "/"
	- var home 	= '/'
	- var about = '/about'
	- var mbtis = '/mbtis'
	- var formm	= '/mbtis/0'
	- var formq = '/mbtis/1'
	- var step3 = '/mbtis/2'
	- var test 	= '/mbtis/0'
	- var admin = '/admin'
	- var login = '/admin/login'
	- var docs 	= '/docs'
	- var more 	= '/more'
	- var personalities = ['enfj', 'enfp', 'entj', 'entp', 'esfj', 'esfp', 'estj', 'estp', 'infj', 'infp', 'intj', 'intp', 'isfj', 'isfp', 'istp', 'istp']


// [if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html.no-js(lang="en")
	head
		title MBTI-Express&copy;

		block meta
				meta(charset="utf-8")
				meta(name="viewport", content="width=device-width, initial-scale=1.0")
				meta(http-equiv="X-UA-Compatible", content="IE=edge, chrome=1")
				meta(name="description", content="The Myers-Briggs Type Indicator (MBTI) assessment is a psychometric questionnaire designed to measure psychological preferences in how people perceive the world and make decisions")
				meta(name="keywords", content="MBTI, Myer-Brigg, personality test, ISTJ, ISFJ, INTJ, ISTP, ISFP, INFP, INTP, ESTP, ESFP,ENFP,ENTP, ESTJ, ESFJ, ENFJ, ENTJ")
				meta(name="robot", content="index,nofollow")
				meta(name="copyright", content="Copyright Â© 2014 Azenkwed. All Rights Reserved.")
				meta(name="author", content="Kader DJEHAF")
				meta(name="language", content="en")

		block stylesheets
			link(rel='stylesheet', href= host+'css/normalize.css')
			link(rel='stylesheet', href= host+'css/foundation.min.css')
			link(rel='stylesheet', href= host+'fonts/foundation-icons.css')

		block HeadScripts
			script(src= host+"js/vendor/modernizr.js")
				
	body

		block navbar
			//- NAVBAR FOR SMALL SCREEN
			//- nav.tab-bar.show-for-small
			//- 	a.left-off-canvas-toggle.menu-icona(href=mbtis)
			//- 		span MBTI
			
			//- div.contain-to-grid.sticky		
			nav.top-bar.docs-bar.hide-for-small(data-topbar='data-topbar')
				ul.title-area
					li.name
						h1
							a(href=home) MBTI-Express&copy;
					section.top-bar-section
						ul.right
							li.divider
							li.has-dropdown
								a(href=home) Home
								//- ul.dropdown
									li: a(href=about) About
							li.divider
							li.has-dropdown
								a(href=mbtis) MBTI
								ul.dropdown
									li: a(href=formm) FORM M
									li: a(href=formq) FORM Q
									li: a(href=step3) Step III
							li.divider
							//- li.has-dropdown
								a(href=login) Admin
								ul.dropdown
									li: a(href=admin) Admin
							li.divider
							li
								a(href=more) More
							
							li.divider
							//- li
							//- 	a(href=docs) Docs
							li.divider
							li.has-form
								a.small.button(href=test) Take the test

		block subnav
			//- Personalities SUB Nav
		.row
			.large-12.columns
				dl.sub-nav
					dt
						a(href='/personalities') Personalities:
					each p in personalities
						dd
							a(href='/personalities/#{p}', style="padding: 0.1875rem 0rem; color: #008CBA") #{toUpperCase(p)}

		block content


		block scripts
			script(src= host+"js/vendor/jquery.js")
			script(src= host+"js/foundation.min.js")
			script $(document).foundation();

